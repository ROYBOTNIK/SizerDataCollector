<Window x:Class="SizerDataCollector.GUI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sizer Data Collector" Height="600" Width="900"
        MinWidth="700" MinHeight="480">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="198.72"/>
            <RowDefinition Height="Auto" MinHeight="19.96"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Connection &amp; Polling Settings" Grid.Row="0" Margin="0,0,0,16">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Sizer Host" Margin="0 0 8 8"/>
                <TextBox Grid.Column="1" Text="{Binding SizerHost, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="1" Text="Sizer Port" Margin="0 0 8 8"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SizerPort, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="2" Text="Poll Interval (sec)" Margin="0 0 8 8"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PollIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="3" Text="Initial Backoff (sec)" Margin="0 0 8 8"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding InitialBackoffSeconds, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="4" Text="Max Backoff (sec)" Margin="0 0 8 8"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding MaxBackoffSeconds, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="5" Text="Timescale Connection String" Margin="0 0 8 8" VerticalAlignment="Top"/>
                <TextBox Grid.Row="5" Grid.Column="1" Grid.RowSpan="1" Text="{Binding TimescaleConnectionString, UpdateSourceTrigger=PropertyChanged}" 
                         Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Margin="0 0 0 8"/>

                <CheckBox Grid.Row="6" Grid.Column="1" Content="Enable Ingestion" IsChecked="{Binding EnableIngestion}" />

                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Save Settings"
                            Width="120"
                            Command="{Binding SaveSettingsCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Collector Status" Grid.Row="1" Margin="0,0,0,16">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Last Poll Start (UTC)" Margin="0 0 8 8"/>
                <TextBlock Grid.Column="1" Text="{Binding LastPollStartDisplay}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="1" Text="Last Poll End (UTC)" Margin="0 0 8 8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastPollEndDisplay}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="2" Text="Last Poll Error" Margin="0 0 8 8"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LastPollError}" Margin="0 0 0 8" TextWrapping="Wrap"/>

                <TextBlock Grid.Row="3" Text="Total Polls Started" Margin="0 0 8 8"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalPollsStartedDisplay}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="4" Text="Total Polls Succeeded" Margin="0 0 8 8"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding TotalPollsSucceededDisplay}" Margin="0 0 0 8"/>

                <TextBlock Grid.Row="5" Text="Total Polls Failed" Margin="0 0 8 0"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TotalPollsFailedDisplay}"/>

                <TextBlock Grid.Row="6" Text="Last Poll (local)" Margin="0 8 8 0"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LastPollDisplay}" Margin="0 8 0 0"/>

                <TextBlock Grid.Row="7" Text="Last Success (local)" Margin="0 0 8 0"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding LastSuccessDisplay}" Margin="0 0 0 0"/>

                <TextBlock Grid.Row="8" Text="Last Error (local)" Margin="0 8 8 0"/>
                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding LastErrorDisplay}" Margin="0 8 0 0" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Start" Width="80" Margin="0 0 8 0" Command="{Binding StartCommand}"/>
            <Button Content="Stop" Width="80" Command="{Binding StopCommand}"/>
        </StackPanel>
    </Grid>
</Window>
