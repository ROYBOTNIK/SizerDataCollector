<Window x:Class="SizerDataCollector.GUI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sizer Data Collector"
        MinWidth="1024"
        MinHeight="600">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="12"
                Background="#F7F7F7"
                BorderBrush="#DDDDDD"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="22"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding HeaderMachineName, StringFormat=Machine: {0}}"
                               Foreground="Gray"
                               Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Service Status"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding HeaderServiceStatus}"
                                   Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#FAFAFA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,1,0"
                    Padding="12">
                <StackPanel>
                    <TextBlock Text="Navigation"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>
                    <Button Content="Dashboard"
                            Command="{Binding ShowDashboardCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Collector Status"
                            Command="{Binding ShowCollectorStatusCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    <TextBlock Text="Analytics Tools"
                               FontWeight="Bold"
                               Margin="0,12,0,4"/>
                    <Button Content="Tools Home"
                            Command="{Binding ShowLaneToolsHomeCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Lane Consistency"
                            Command="{Binding ShowLaneConsistencyCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Grade Comparison"
                            Command="{Binding ShowGradeComparisonCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Settings"
                            Command="{Binding ShowSettingsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Padding="12"
                    Background="White">
                <ContentControl Content="{Binding CurrentPage}"/>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Padding="12,10"
                Background="#F7F7F7"
                BorderBrush="#DDDDDD"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock Text="Service:"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ServiceStatusSummary}" Margin="6,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="12,0,0,0">
                    <TextBlock Text="Last poll:"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastPollSummary}" Margin="6,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Last error:"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastErrorSummary}" Margin="6,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
