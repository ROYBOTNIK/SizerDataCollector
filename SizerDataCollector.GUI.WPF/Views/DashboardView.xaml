<UserControl x:Class="SizerDataCollector.GUI.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="{Binding OverviewTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
            <TextBlock Text="{Binding OverviewDescription}"
                       TextWrapping="Wrap"
                       Foreground="Gray"/>
        </StackPanel>

        <Border Grid.Row="1"
                Margin="0,16,0,0"
                Padding="12"
                Background="#0F000000"
                BorderBrush="#33000000"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Service Status"
                           FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding ServiceStatus}"
                           Margin="8,0,0,0"/>

                <TextBlock Grid.Row="1"
                           Text="Last Poll"
                           Margin="0,8,0,0"
                           FontWeight="SemiBold"/>
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding LastPoll}"
                           Margin="8,8,0,0"/>

                <TextBlock Grid.Row="2"
                           Text="Last Error"
                           Margin="0,8,0,0"
                           FontWeight="SemiBold"/>
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Text="{Binding LastError}"
                           Margin="8,8,0,0"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

