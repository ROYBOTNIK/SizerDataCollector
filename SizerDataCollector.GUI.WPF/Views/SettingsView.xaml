<UserControl x:Class="SizerDataCollector.GUI.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Database Bootstrap"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Manage database bootstrap and health checks."
                           Foreground="Gray"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,0,0,12"/>
                    </Style>
                </StackPanel.Resources>
                <Border Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1" Padding="12">
                    <StackPanel Margin="0">
                        <TextBlock Text="Connection"
                                   FontWeight="SemiBold"/>
                        <TextBox Text="{Binding ConnectionString, Mode=OneWay}"
                                 IsReadOnly="True"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1" Padding="12">
                    <StackPanel Margin="0">
                        <TextBlock Text="Actions"
                                   FontWeight="SemiBold"/>
                        <WrapPanel Orientation="Horizontal" ItemHeight="32" ItemWidth="140" Margin="0,4,0,0">
                            <Button Command="{Binding InitializeSqlFolderCommand}"
                                    IsEnabled="{Binding CanRunActions}"
                                    Margin="0,0,8,8"
                                    Padding="12,8"
                                    MinWidth="160">
                                <TextBlock Text="Initialize SQL Folder" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Button>
                            <Button Command="{Binding BootstrapDatabaseCommand}"
                                    IsEnabled="{Binding CanRunActions}"
                                    Margin="0,0,8,8"
                                    Padding="12,8"
                                    MinWidth="160">
                                <TextBlock Text="Bootstrap Database" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Button>
                            <Button Command="{Binding RefreshStatusCommand}"
                                    IsEnabled="{Binding CanRunActions}"
                                    Margin="0,0,8,8"
                                    Padding="12,8"
                                    MinWidth="160">
                                <TextBlock Text="Refresh Status" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Button>
                        </WrapPanel>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="Gray"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Background="#FAFAFA" BorderBrush="#DDDDDD" BorderThickness="1" Padding="12">
                    <StackPanel Margin="0">
                        <TextBlock Text="Status"
                                   FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Postgres reachable" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Text="{Binding PostgresReachable}" Grid.Row="0" Grid.Column="1" />

                            <TextBlock Text="Timescale enabled" Grid.Row="1" Grid.Column="0"/>
                            <TextBlock Text="{Binding TimescaleEnabled}" Grid.Row="1" Grid.Column="1" />

                            <TextBlock Text="Database" Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Text="{Binding DatabaseName}" Grid.Row="2" Grid.Column="1" />

                            <TextBlock Text="Applied migrations" Grid.Row="3" Grid.Column="0"/>
                            <TextBlock Text="{Binding AppliedMigrations}" Grid.Row="3" Grid.Column="1" />

                            <TextBlock Text="Continuous aggregates" Grid.Row="4" Grid.Column="0"/>
                            <TextBlock Text="{Binding ContinuousAggregateCount}" Grid.Row="4" Grid.Column="1" />

                            <TextBlock Text="Seed counts (bands / thresholds / calendar)" Grid.Row="5" Grid.Column="0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} / {1} / {2}">
                                        <Binding Path="BandDefinitionsCount"/>
                                        <Binding Path="MachineThresholdsCount"/>
                                        <Binding Path="ShiftCalendarCount"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>

                        <Expander Header="Missing objects" IsExpanded="False" Margin="0,4,0,0">
                            <ItemsControl ItemsSource="{Binding MissingObjects}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <TextBlock Text="{Binding LastCheckedAt, StringFormat=Last checked: {0:G}}"
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

